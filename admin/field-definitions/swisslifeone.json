{
  "platform": "swisslifeone",
  "fields": [
    {
      "key": "login_button_home",
      "type": "button",
      "label": "Bouton Se connecter (page d'accueil)",
      "selector": ".button-connection"
    },
    {
      "key": "login_username",
      "type": "text",
      "label": "Nom d'utilisateur",
      "selector": "#userNameInput"
    },
    {
      "key": "login_password",
      "type": "password",
      "label": "Mot de passe",
      "selector": "#passwordInput"
    },
    {
      "key": "login_submit",
      "type": "button",
      "label": "Connexion",
      "selector": "#submitButton"
    },
    {
      "key": "menu_etudes_simulateurs",
      "type": "button",
      "label": "Menu Études et simulateurs",
      "selector": "a:has-text('Études et simulateurs')"
    },
    {
      "key": "cookie_tout_autoriser",
      "type": "button",
      "label": "Tout autoriser (cookies)",
      "selector": "#onetrust-accept-btn-handler"
    },
    {
      "key": "menu_simulateurs",
      "type": "button",
      "label": "Menu Simulateurs",
      "selector": ".mat-mdc-menu-item.sous-lien:has-text('Simulateurs')"
    },
    {
      "key": "slsis_nom_projet",
      "type": "text",
      "label": "Nom du projet",
      "selector": "#nom-projet"
    },
    {
      "key": "slsis_date_effet",
      "type": "text",
      "label": "Date d'effet",
      "selector": "#contratSante-dateEffet"
    },
    {
      "key": "slsis_gamme",
      "type": "select",
      "label": "Gamme assurance",
      "selector": "#selection-produit-sante, [name='contratSante.produitId']"
    },
    {
      "key": "slsis_date_naissance",
      "type": "text",
      "label": "Date de naissance souscripteur",
      "selector": "#date-naissance-assure-principal"
    },
    {
      "key": "slsis_regime_social",
      "type": "select",
      "label": "Régime social",
      "selector": "#regime-social-assure-principal, [name='client.regimeSocial']",
      "options": {
        "open_selector": "[name='client.regimeSocial']",
        "items": [
          { "value": "SECURITE_SOCIALE", "label": "Régime Général (CPAM)", "option_selector": "select[name='client.regimeSocial'] option[value='SECURITE_SOCIALE']" },
          { "value": "TNS", "label": "Régime Général pour TNS (CPAM)", "option_selector": "select[name='client.regimeSocial'] option[value='TNS']" },
          { "value": "AMEXA", "label": "MSA - Amexa", "option_selector": "select[name='client.regimeSocial'] option[value='AMEXA']" },
          { "value": "SECURITE_SOCIALE_ALSACE_MOSELLE", "label": "Régime Local (CPAM Alsace Moselle)", "option_selector": "select[name='client.regimeSocial'] option[value='SECURITE_SOCIALE_ALSACE_MOSELLE']" },
          { "value": "AUTRES_REGIME_SPECIAUX", "label": "Autres régimes spéciaux", "option_selector": "select[name='client.regimeSocial'] option[value='AUTRES_REGIME_SPECIAUX']" }
        ]
      }
    },
    {
      "key": "slsis_statut",
      "type": "select",
      "label": "Statut",
      "selector": "#statut-assure-principal, [name='client.statut']"
    },
    {
      "key": "slsis_departement",
      "type": "select",
      "label": "Département",
      "selector": "#departement-assure-principal, [name='client.departement']"
    },
    {
      "key": "slsis_couverture_oui",
      "type": "button",
      "label": "Couverture individuelle Oui (label)",
      "selector": "label[for='projet-confort-hospitalisation-oui'], label:has(input[id*='confort'][value='oui'])"
    },
    {
      "key": "slsis_couverture_non",
      "type": "button",
      "label": "Couverture individuelle Non (label)",
      "selector": "label[for='projet-confort-hospitalisation-non'], label:has(input[id*='confort'][value='non'])"
    },
    {
      "key": "slsis_ij_oui",
      "type": "button",
      "label": "Indemnités journalières Oui (label)",
      "selector": "label[for='ij-oui'], label:has(input[name*='ij'][value='oui'])"
    },
    {
      "key": "slsis_ij_non",
      "type": "button",
      "label": "Indemnités journalières Non (label)",
      "selector": "label[for='ij-non'], label:has(input[name*='ij'][value='non'])"
    },
    {
      "key": "slsis_madelin",
      "type": "button",
      "label": "Option Loi Madelin (checkbox via label)",
      "selector": "label[for='loi-madelin-checkbox'], label:has(#madelin)"
    },
    {
      "key": "slsis_resiliation_oui",
      "type": "button",
      "label": "Résiliation Oui (label)",
      "selector": "label[for='resiliation-contrat-oui']"
    },
    {
      "key": "slsis_resiliation_non",
      "type": "button",
      "label": "Résiliation Non (label)",
      "selector": "label[for='resiliation-contrat-non']"
    },
    {
      "key": "slsis_reprise_oui",
      "type": "button",
      "label": "Reprise concurrence Oui (label)",
      "selector": "label[for='reprise-concurrence-oui']"
    },
    {
      "key": "slsis_reprise_non",
      "type": "button",
      "label": "Reprise concurrence Non (label)",
      "selector": "label[for='reprise-concurrence-non']"
    },
    {
      "key": "slsis_btn_suivant_projet",
      "type": "button",
      "label": "Bouton Suivant (Projet)",
      "selector": "#bt-suite-projet, button:has-text('Suivant'), button:has-text('Suite')"
    },
    {
      "key": "slsis_btn_suivant_confort",
      "type": "button",
      "label": "Bouton Suivant (Confort Hospitalisation)",
      "selector": "#bt-suite-confortHospitalisation, button:has-text('Suivant')"
    },
    {
      "key": "slsis_btn_suivant_souscription",
      "type": "button",
      "label": "Bouton Suivant (Souscription)",
      "selector": "#bt-souscription-suite, button:has-text('Suivant')"
    }
  ]
}
